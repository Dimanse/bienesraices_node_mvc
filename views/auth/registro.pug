extends ../layout/index

block contenido 
    .py-10
        h1.text-4xl.my-10.font-extrabold.text-center.text-zinc-500 Bienes
            span.font-normal.text-indigo-500 Raices
        h2.text-center.text-2xl.font-extrabold= pagina

        if errores
            div(class="max-w-md mx-auto my-10")
                each error in errores 
                    p.bg-red-200.border-solid.border-2.border-red-700.text-red-500.uppercase.text-center.text-sm.p-2.mb-2.font-bold.shadow-xl= error.msg

        .mt-8.mx-auto.max-w-md
            .bg-white.py-8.px-4.shadow
                form.space-y-5(method="POST" action="/auth/registro" novalidate)
                    input(type="hidden" name="_csrf" value=csrfToken)
                    div 
                        label.block.text-sm.uppercase.text-gray-600.mb-3.font-bold(for="nombre") Nombre: 
                        input#nombre.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Tu Nombre" type="text" name="nombre" value= usuario ? usuario.nombre : '')

                    div
                        label.block.text-sm.uppercase.text-gray-600.mb-3.font-bold(for="email") Email de Registro: 
                        input#email.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Tu Email" type="email" name="email" value= usuario ? usuario.email : '')

                    div
                        label.block.text-sm.uppercase.text-gray-600.mb-3.font-bold(for="password") Password: 
                        input#password.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Tu password" type="password" name="password")

                    div
                        label.block.text-sm.uppercase.text-gray-600.mb-3.font-bold(for="repite_password") Confirma tu Password: 
                        input#password.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Repite tu Password" type="password" name="repite_password")
                    

                    input( class="w-full bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-2" type="submit" value="Crear Cuenta")

                    div.flex.items-center.justify-between 
                        a.text-gray-400.text-sm(href="/auth/login") ¿Ya tienes Cuenta? Inicia Sesión 
                        a.text-gray-400.text-sm(href="/auth/olvidePassword") Olvide mi password 

                     
