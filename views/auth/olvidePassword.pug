extends ../layout/index

block contenido 
    .py-10
        h1.text-4xl.my-10.font-extrabold.text-center.text-zinc-500 Bienes
            span.font-normal.text-indigo-500 Raices
        h2.text-center.text-2xl.font-extrabold= pagina
        if errores
            div(class="max-w-md mx-auto my-10")
                each error in errores 
                    p.bg-red-200.border-solid.border-2.border-red-700.text-red-500.uppercase.text-center.text-sm.p-2.mb-2.font-bold.shadow-xl= error.msg
        .mt-8.mx-auto.max-w-md
            .bg-white.py-8.px-4.shadow
                form.space-y-5(method="POST" action="/auth/olvidePassword" noValidate)
                    input(type="hidden" name="_csrf" value=csrfToken)
                    
                    div
                        label.block.text-sm.uppercase.text-gray-600.mb-3.font-bold(for="email") Email de Registro: 
                        input#email.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Tu Email" type="email" name="email")

                    input( class="w-full bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-2" type="submit" value="Enviar Instruciones")

                    div.flex.items-center.justify-between 
                        a.text-gray-400.text-sm(href="/auth/login") ¿Ya tienes Cuenta? Inicia Sesión 
                        a.text-gray-400.text-sm(href="/auth/registro")  ¿No tienes Cuenta? Registrate